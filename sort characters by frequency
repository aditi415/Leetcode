class Solution {
public:
    string frequencySort(string s) {
        unordered_map<char,int> freq;
        for(char ch:s)
        freq[ch]++;
        priority_queue<pair<int,char>> maxHeap;
        for(auto& [ch,count]: freq)
        maxHeap.push({count,ch});
        string result;
        while(!maxHeap.empty()){
            auto[count,ch]=maxHeap.top();
            maxHeap.pop();
            result+=string(count,ch);
        }
        return result;
    }
};
